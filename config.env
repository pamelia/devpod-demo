# DevPod K8s ML Configuration
# Single source of truth for container registry and image settings

# Container Registry Settings - Custom image built from CoreWeave base
REGISTRY="ghcr.io"
ORG="pamelia"
IMAGE_NAME="devpod-demo"
IMAGE_TAG="latest"

# Full image reference (constructed from above)
FULL_IMAGE="${REGISTRY}/${ORG}/${IMAGE_NAME}:${IMAGE_TAG}"

# Kubernetes Settings
NAMESPACE="ml"
SSH_KEY_SECRET="ml-dev-ssh-keys"

# Default Resource Limits
DEFAULT_DEV_GPU_LIMIT="1"
DEFAULT_CPU_REQUEST="2"
DEFAULT_MEMORY_REQUEST="8Gi"

# Service Type (ClusterIP for port-forward access)
SERVICE_TYPE="ClusterIP"

# Training Job Defaults
DEFAULT_EPOCHS="10"
DEFAULT_BATCH_SIZE="32"
DEFAULT_LEARNING_RATE="0.001"

# Storage Settings
WORKSPACE_SIZE="50Gi"
DATASETS_SIZE="500Gi"
OUTPUTS_SIZE="200Gi"
CACHE_SIZE="100Gi"

# Development Settings
DEV_USER="dev"
WORKSPACE_PATH="/workspace"
DATA_PATH="/data"
OUTPUTS_PATH="/outputs"
